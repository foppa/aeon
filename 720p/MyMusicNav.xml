<window id="502">
	<include condition="Skin.HasSetting(music_disablemultiwall) + Skin.HasSetting(music_disablelist)">Furniture_MusicDefaultControlWall</include>
	<include condition="Skin.HasSetting(music_disablewall) + Skin.HasSetting(music_disablelist)">Furniture_MusicDefaultControlMultiWall</include>
	<include condition="![Skin.HasSetting(music_disablemultiwall) + Skin.HasSetting(music_disablelist)] + ![Skin.HasSetting(music_disablewall) + Skin.HasSetting(music_disablelist)]">Furniture_MusicDefaultControlList</include>
	<allowoverlay>yes</allowoverlay>
	<controls>

	<control type="multiimage">
		<include>BackgroundVarsGlobal</include>
		<include>BackgroundVarsMusic</include>
	</control>

	<control type="largeimage" id="102">
		<include>FullscreenDimensions</include>
        <visible>!Control.IsVisible(103) + Control.IsVisible(57) + !IsEmpty(listitem.property(fanart_image)) + !Skin.HasSetting(nomusicfanart)</visible>
		<fadetime>400</fadetime>
		<texture>$INFO[listitem.property(fanart_image)]</texture>
		<include>Animation_FanartFade</include>
	</control>

	<control type="largeimage" id="103">
		<include>FullscreenDimensions</include>
        <visible>Control.IsVisible(57) + !IsEmpty(container.property(fanart_image)) + !Skin.HasSetting(nomusicfanart)</visible>
		<fadetime>400</fadetime>
		<texture>$INFO[container.property(fanart_image)]</texture>
		<include>Animation_FanartFade</include>
	</control>
	
	<include condition="!Skin.HasSetting(music_disablewall)">Furniture_WallBackground</include>
	<include condition="!Skin.HasSetting(music_disablemultiwall)">Furniture_MultiWallBackground</include>

	<control type="group">
		<include>FullscreenDimensions</include>
		<include>Animation_OpenCloseZoom</include>
		<include>Furniture_Time</include>
		<include>Furniture_MediaPanel</include>
		<include>Objects_MenuPanel</include>

		<include condition="!Skin.HasSetting(music_disablewall)">Viewtype_Wall</include>
		<include condition="!Skin.HasSetting(music_disablewall)">Furniture_WallTime</include>
		<include condition="!Skin.HasSetting(music_disablewall)">Furniture_WallRSS</include>
		
		<control type="group">
	
			<control type="image">
				<include>Objects_MediaLogo</include>
				<texture>windows/logo_music.png</texture>
			</control>	
	
			<control type="label">
				<include>Objects_MediaLabel</include>
				<label>31037</label>
			</control>

			<control type="grouplist" id="7000">
				<include>Animation_MediaMenuSlide</include>
				<include>Objects_MediaMenuGroup</include>

				<control type="button" id="900">
					<label>$LOCALIZE[31050] $INFO[Container.ViewMode]</label>
					<include>Objects_MediaMenuButton</include>
					<onclick>SetFocus(69)</onclick>
					<visible>![Skin.HasSetting(music_disablewall) + Skin.HasSetting(music_disablemultiwall)] + ![Skin.HasSetting(music_disablewall) + Skin.HasSetting(music_disablelist)] + ![Skin.HasSetting(music_disablelist) + Skin.HasSetting(music_disablemultiwall)]</visible>
				</control>
				
				<control type="button" id="3">
					<label>103</label>
					<include>Objects_MediaMenuButton</include>
				</control>

				<control type="togglebutton" id="940">
					<include>Objects_MediaMenuButton</include>				
					<include>Objects_ListLayoutStrings</include>
					<usealttexture>Skin.HasSetting(musiclistfull)</usealttexture>
					<onclick>Skin.SetBool(musiclistfull)</onclick>
					<altclick>Skin.Reset(musiclistfull)</altclick>
					<visible>Control.IsVisible(50)</visible>
				</control>
				
				<include condition="!Skin.HasSetting(music_disablemultiwall)">Objects_MultiWallMusicInfoButtons</include>

				<include condition="!Skin.HasSetting(music_disablelist)">Objects_PanelDensityButton</include>
				
				<control type="togglebutton" id="901">
					<include>Objects_MediaMenuButton</include>				
					<include>Objects_FanartToggleStrings</include>
					<usealttexture>Skin.HasSetting(nomusicfanart)</usealttexture>
					<onclick>Skin.SetBool(nomusicfanart)</onclick>
					<altclick>Skin.Reset(nomusicfanart)</altclick>
					<visible>Control.IsVisible(57)</visible>
				</control>

				<include condition="!Skin.HasSetting(music_disablewall)">Objects_WallGridButton</include>
				
				<include condition="!Skin.HasSetting(music_disablewall)">Objects_WallBackdropButton</include>
				
				<control type="togglebutton" id="995">
					<include>Objects_MediaMenuButton</include>				
					<label>$LOCALIZE[32002]: $LOCALIZE[31077]</label>
					<altlabel>$LOCALIZE[32002]: $LOCALIZE[31078]</altlabel>
					<usealttexture>Skin.HasSetting(nosortlabel)</usealttexture>
					<onclick>Skin.ToggleSetting(nosortlabel)</onclick>
					<visible>Control.IsVisible(57) + [Window.IsActive(500) | Window.IsActive(502)] + !Skin.HasSetting(music_disablemultiwall)</visible>
				</control>				
				
				<control type="button" id="5">
					<label>31057</label>
					<include>Objects_MediaMenuButton</include>
					<onclick>XBMC.ReplaceWindow(MyMusicFiles)</onclick>
				</control>
				
				<include>Objects_MusicSetupButton</include>
				
				<include>Objects_MediaDebugButtons</include>
			</control>
		</control>

		<include condition="!Skin.HasSetting(music_disablemultiwall)">Viewtype_Multiwall</include>
		<include condition="!Skin.HasSetting(music_disablelist)">Viewtype_List</include>
		
	</control>

	<include condition="![Skin.HasSetting(music_disablewall) + Skin.HasSetting(music_disablemultiwall)] + ![Skin.HasSetting(music_disablewall) + Skin.HasSetting(music_disablelist)] + ![Skin.HasSetting(music_disablelist) + Skin.HasSetting(music_disablemultiwall)]">ViewChange</include>
	<include condition="Skin.HasSetting(debug)">Furniture_Debug</include>
	
	</controls>
</window>
